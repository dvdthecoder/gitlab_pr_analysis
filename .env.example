# Copy this file to .env and fill values.
GITLAB_BASE_URL=https://gitlab.com
GITLAB_TOKEN=glpat-xxxxxxxxxxxxxxxx

# Use one of these:
# GITLAB_PROJECT_ID=12345678
GITLAB_PROJECT_IDS=12345678,23456789
# Optional org/group scope (numeric group ID or full path like org/subgroup):
# GITLAB_GROUP_ID=your-group
# GITLAB_GROUP_IDS=your-group,another-group

# Qodo/PR-Agent enrichment command (must include {mr_url})
# Read-only mode (no MR updates/labels): publish_output=false
QODO_DESCRIBE_CMD=python -m pr_agent.cli --pr_url={mr_url} describe --config.publish_output=false --pr_description.publish_labels=false --config.verbosity_level=2
# Optional per-tool overrides (fallback is derived from QODO_DESCRIBE_CMD)
# QODO_REVIEW_CMD=python -m pr_agent.cli --pr_url={mr_url} review --config.publish_output=false --config.verbosity_level=2
# QODO_IMPROVE_CMD=python -m pr_agent.cli --pr_url={mr_url} improve --config.publish_output=false --config.verbosity_level=2

# OpenAI model access for Qodo/PR-Agent describe
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4.1-mini

DB_PATH=./pr_analysis.db

# Optional tuning
PAGE_SIZE=100
MAX_RETRIES=3
BACKOFF_MS=500
REQUEST_TIMEOUT=30
SYNC_CONCURRENCY=5

# Optional infra heuristics
INFRA_TICKET_REGEX=INFRA-\d+,OPS-\d+
INFRA_LABEL_ALLOWLIST=infra,platform,devops,sre
INFRA_KEYWORD_LIST=terraform,k8s,helm,ci/cd,docker,cluster,networking,deployment,observability
INFRA_STRONG_THRESHOLD=4.0
INFRA_WEAK_THRESHOLD=1.5
